header
  nav
    = link_to image_tag('logo.png'), root_path
    ul.left
      li = nav_link_to 'Released', movies_path
      li = nav_link_to 'Upcoming', filtered_movies_path(:upcoming)
      li = nav_link_to 'Recent', filtered_movies_path(:recent)
      li = nav_link_to 'Genres', genres_path
      - if current_user
        li = nav_link_to 'Users', users_path

    ul.right
      - if current_user
        li = link_to current_user.name, current_user
        li = link_to 'Sign Out', session_path,
                      class: 'button',
                      data: { turbo_method: :delete }
        li = link_to 'Account Settings', edit_user_path(current_user)
      - else
        li = link_to 'Sign In', signin_path, class: 'button'
        li = link_to 'Sign Up', signup_path, class: 'button'
